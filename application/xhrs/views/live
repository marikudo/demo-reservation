<script type="text/javascript">
  $(document).ready(function(){

  	

    var validator = $("#validate-form").validate({
				    rules: {
				      last_name:{
				        required:true
				      },first_name: {
				        required: true,
				      },middle_name: {
				        required: true,
				      }
				    
				    },
				    
				    errorPlacement: function(error, element) {
				      if ( element.is(":radio") )
				        error.appendTo( element.parent().next().next() );
				      else if ( element.is(":checkbox") )
				        error.appendTo ( element.next() );
				      else
				        error.appendTo( element.parent().find('span.validation-status') );
				    },
				    success: "valid",
				    submitHandler: function(form){
					      $('button[type=submit]').attr('disabled', 'true');
					      $(this).bind("keypress", function(e) { if (e.keyCode == 13) return false; });

					      


					       request = $.ajax({
								            url: $(form).attr('action'),
								            type: "post",
								            data: $(form).serialize()
								        });

					        // callback handler that will be called on success
					        request.done(function (response, textStatus, jqXHR) {
					            alert("success awesome");
					            $('#add--response').html('<div class="alert alert-success"><button type="button" class="close" data-dismiss="alert">Ã—</button><strong>Well done!</strong> You successfully read this important alert message.</div>');
					        });
	
   					 }
  });

 $('#content').liveEdit({
            height: 350,
            css: ['bootstrap/css/bootstrap.min.css', 'bootstrap/bootstrap_extend.css'] /* Apply bootstrap css into the editing area */,
            groups: [
                    ["group1", "", ["Bold", "Italic", "Underline", "ForeColor", "RemoveFormat"]],
                    ["group2", "", ["Bullets", "Numbering", "Indent", "Outdent"]],
                    ["group3", "", ["Paragraph", "FontSize", "FontDialog", "TextDialog"]],
                    ["group4", "", ["LinkDialog", "ImageDialog", "TableDialog", "Emoticons", "Snippets"]],
                    ["group5", "", ["Undo", "Redo", "FullScreen", "SourceDialog"]]
                    ] /* Toolbar configuration */
        });

  });
</script>

